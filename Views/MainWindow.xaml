<Window x:Class="PomodoroTimer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PomodoroTimer.Converters"
        Title="Pomodoro Timer"
        Height="300"
        Width="350"
        Background="#FF1E1E2F"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI"
        ResizeMode="NoResize">

    <Window.Resources>
        <local:BooleanToPlayPauseConverter x:Key="BoolToPlayPause"/>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF3E4A89"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="8 4"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="100"/>
            
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True"
                                >
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DropShadowEffect x:Key="DropShadow"
                          ShadowDepth="2"
                          Color="Black"
                          BlurRadius="8"
                          Opacity="0.3"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Timer Display -->
        <TextBlock Grid.Row="0"
                   Text="{Binding TimeLeft}"
                   FontSize="72"
                   Foreground="#FFEAEAEA"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   Effect="{StaticResource DropShadow}"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0 20 0 0">
            <Button Content="{Binding IsRunning, Converter={StaticResource BoolToPlayPause}}"
                    Command="{Binding StartPauseCommand}"/>
            <Button Content="Reset"
                    Command="{Binding ResetCommand}"/>
        </StackPanel>
    </Grid>
</Window>
